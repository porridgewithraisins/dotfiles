
[url "ssh://git@github.com/"]
    insteadOf = https://github.com/


[url "ssh://git@gitlab.com/"]
    insteadOf = https://gitlab.com/

[rebase]
    autosquash = true
    autostash = true

[help]
    autocorrect = prompt

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[include]
    path = ~/.delta.themes.gitconfig

[delta]
    navigate = true
    line-numbers = true
    hyperlinks = true
    features = navigate catppuccin-macchiato
    
[diff]
    algorithm = histogram
    context = 10
    colorMoved = default

[gpg]
    format = ssh

[transfer]
    fsckobjects = true
[fetch]
    fsckobjects = true
[receive]
    fsckObjects = true

[branch]
    sort = committerdate

[commit]
    gpgsign = true
[gpg "ssh"]
    allowedSignersFile = /home/sandy/.git-allowed-signers
[user]
    signingkey = /home/sandy/.ssh/id_ed25519.pub
[credential]
    helper = libsecret

[rerere]
    enabled = true

[merge]
    conflictstyle = diff3


[init]
	defaultBranch = master
